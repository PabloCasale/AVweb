@model AVweb.Models.Forecast
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- NAVBAR-->
<nav class="navbar">
    <a class="navbar-brand">AMERICA VIRTUAL</a>
    <form class="form-inline">
        <span id="userlog" class="mr-2"> </span>
        <button id="btnlogin" class="btn btn-outline-light my-2 my-sm-0" type="submit">
            Iniciar Sesion <i class="fas fa-user"></i>
        </button>
        <button id="btnclose" class="btn btn-sm text-white mr-2"> <i class="fas fa-sign-out-alt fa-2x"></i></button>
    </form>
</nav>
<!-- LOGIN FORM-->
<div class="overlap" id="overlap-box">
    <div class="form-login-box border bg-white" style="width:18rem; ">
        <form id="loginform" class="form-signin container form-group pt-1 ">
            <label for="username"> Usuario</label>
            <input type="email" id="username" class="form-control form-control-sm" placeholder="usuario" required autofocus>
            <label for="password">Contraseña</label>
            <input type="password" id="password" class="form-control form-control-sm" placeholder="contraseña" required>
            <button id="btnsubmit" class="btn btn-sm btn-danger btn-block mt-1">INICIAR SESION</button>
        </form>
    </div>
</div>

<!-- HEADER-->

<div class="main-header mt-5 mb-3 mx-4">
    <h2 class="black text-center pb-3"><strong>SERVICIO DEL CLIMA</strong> </h2>
    <hr class="rounded hr-header" />
</div>


<!-- MAIN -->
<div class="container">
    <div class="row mx-2">
        <div class="col shadow p-3 mb-5 mx-3 bg-white rounded select-location">
            <h3 class="card-head text-center pb-3 mb-4">Selecciona la zona</h3>
            @using (Html.BeginForm("Index", "Home"))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.Country)
                    <br />
                    @Html.TextBoxFor(x => x.Country, new { placeholder = "Seleccioná un país", Class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Country)
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.City)
                    <br />
                    @Html.TextBoxFor(x => x.City, new { placeholder = "Seleccioná una ciudad", Class = "form-control" })
                    @Html.ValidationMessageFor(x => x.City)
                </div>
                <br />
                <button  class="btn btn-block btn-search">BUSCAR</button>
            }
        </div>

        <div class="col shadow p-3 mb-5 mx-3 bg-white rounded select-location">
            <h3 class="card-head text-center pb-3">Reporte</h3>
            <div class="row">
                <div class="col-5 mt-4 ml-0">
                    <p id="country" class="text-muted p-0 m-0">@Model.Country</p>
                    <p id="city" class="text-muted mb-0">@Model.City</p>
                    <p id="day" class="mb-0">VIERNES</p>
                    <p id="climate" class="mb-0">@Model.Description</p>
                    <p id="temperature" class="mt-0">@Model.Temp &deg;</p>
                    <p id="farenheitTemp">@Model.Farenheit ºF</p>
                </div>
                <div class="col-7 mt-4">
                    <p id="todayIcon"><i class="fas fa-sun fa-9x text-secondary"></i></p>
                    <ul class="text-right">
                        <li id="probability" class="mt-4">Prob. de Precipitaciones: 0%</li>
                        <li id="humidity">Humedad: @Model.Humidity%</li>
                        <li id="wind">Viento: @Model.Wind  km/h</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- LIST -->
<div class="container">
    <div class="row text-secondary shadow-sm rounded daylist d-flex justify-content-around mx-4">
        <div class="col-2 text-center border-right">
            <h6 id="FirstDay" class="v-list">DAY</h6>
            <i class="fas fa-sun fa-5x v-list"></i>
            <p class="v-list">@Model.Temp ºC</p>
            <p class="v-list">@Model.Farenheit ºF</p>
        </div>
        <div class="col-2 text-center border-right">
            <h6 id="SecondDay" class="v-list">DAY</h6>
            <i class="fas fa-sun fa-5x v-list"></i>

            <p class="v-list">@Model.Temp ºC</p>
            <p class="v-list">@Model.Farenheit ºF</p>
        </div>
        <div class="col-2 text-center border-right">
            <h6 id="ThirdDay" class="v-list">DAY</h6>
            <i class="fas fa-cloud-sun fa-5x v-list"></i>
            <p class="v-list">@Model.Temp ºC</p>
            <p class="v-list">@Model.Farenheit ºF</p>
        </div>
        <div class="col-2 text-center border-right">
            <h6 id="FourthDay" class="v-list">DAY</h6>
            <i class="fas fa-cloud-showers-heavy fa-5x v-list"></i>
            <p class="v-list">@Model.Temp ºC</p>
            <p class="v-list">@Model.Farenheit ºF</p>
        </div>
        <div class="col-2 text-center">
            <h6 id="FifthDay" class="v-list">DAY</h6>
            <i class="fas fa-cloud-showers-heavy fa-5x v-list"></i>
            <p class="v-list">@Model.Temp ºC</p>
            <p class="v-list">@Model.Farenheit ºF</p>
        </div>
    </div>
</div>

<!-- FOOTER-->
<footer class="dark-footer mt-5">
    <div class="mx-5">
        <div class="pt-4 pb-3">
            <p>
                Copyright 2020 All right register | America Virtual
                <a class="float-right" href="https://www.americavirtualsa.com/" target="_blank">AMERICA VIRTUAL</a>
            </p>
        </div>
    </div>
</footer>

